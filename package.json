{
  "name": "autoshow-cli",
  "author": "Anthony Campolo",
  "description": "An example workflow for automatically generating customizable show notes for audio and video files.",
  "keywords": [
    "ChatGPT",
    "Claude",
    "Gemini",
    "Deepseek",
    "Fireworks",
    "Together",
    "Whisper.cpp",
    "Deepgram",
    "AssemblyAI"
  ],
  "type": "module",
  "scripts": {
    "tsx:base": "tsx --env-file=.env --no-warnings",
    "node:base": "node --no-warnings --experimental-transform-types --es-module-specifier-resolution=node",
    "setup": "bash .github/setup/setup.sh",
    "check": "npx tsc",
    "as": "npm run tsx:base -- src/commander.ts",
    "test:base": "tsx --test --env-file=.env --test-reporter=spec --test-reporter-destination=spec.log --test-concurrency=1",
    "test:cli-local": "npm run test:base -- test/cli/cli-local.test.ts",
    "test:cli": "npm run test:base -- test/cli/*.test.ts",
    "test:models": "npm run test:base -- test/models/*.test.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.39.0",
    "@deepgram/sdk": "3.11.1",
    "@google/generative-ai": "0.22.0",
    "@prisma/client": "6.4.1",
    "assemblyai": "4.9.0",
    "chalk": "5.4.1",
    "commander": "13.1.0",
    "fast-xml-parser": "5.0.8",
    "file-type": "20.4.0",
    "openai": "4.86.1",
    "prisma": "6.4.1"
  },
  "devDependencies": {
    "@types/node": "22.13.7",
    "tsx": "4.19.3",
    "typescript": "5.8.2"
  }
}
