{
  "name": "autoshow-cli",
  "author": "Anthony Campolo",
  "description": "An example workflow for automatically generating customizable show notes for audio and video files.",
  "keywords": [
    "ChatGPT",
    "Claude",
    "Gemini",
    "Whisper.cpp",
    "Deepgram",
    "AssemblyAI"
  ],
  "type": "module",
  "scripts": {
    "repo": "repomix && code new-llm.xml",
    "tsx:base": "tsx --env-file=.env --no-warnings",
    "setup": "./.github/setup.sh",
    "check": "npx tsc",
    "as": "npm run tsx:base -- src/commander.ts",
    "v": "npm run as -- --video",
    "v3": "npm run as -- --whisper large-v3-turbo --video",
    "f": "npm run as -- --file",
    "f3": "npm run as -- --whisper large-v3-turbo --file",
    "r": "npm run as -- --rss",
    "r3": "npm run as -- --whisper large-v3-turbo --rss",
    "p": "npm run as -- --playlist",
    "p3": "npm run as -- --whisper large-v3-turbo --playlist",
    "u": "npm run as -- --urls",
    "u3": "npm run as -- --whisper large-v3-turbo --urls",
    "c": "npm run as -- --channel",
    "c3": "npm run as -- --whisper large-v3-turbo --channel",
    "test:base": "tsx --test --env-file=.env --test-reporter=spec --test-reporter-destination=spec.log --test-concurrency=1",
    "test:local": "npm run test:base -- test/cli/cli-local.test.ts",
    "test:all": "npm run test:base -- test/cli/cli-all.test.ts",
    "test:prompts": "npm run test:base -- test/cli/all-prompts.test.ts",
    "test:models": "npm run test:base -- test/cli/all-models.test.ts",
    "test:cli": "npm run test:base -- test/cli/*.test.ts",
    "test:e2e": "npm run test:base -- test/cli/e2e.test.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.39.0",
    "@deepgram/sdk": "3.11.1",
    "@google/generative-ai": "0.22.0",
    "assemblyai": "4.9.0",
    "chalk": "5.4.1",
    "commander": "13.1.0",
    "fast-xml-parser": "5.0.8",
    "file-type": "20.4.0",
    "openai": "4.86.1",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "22.13.7",
    "tsx": "4.19.3",
    "typescript": "5.8.2"
  }
}
